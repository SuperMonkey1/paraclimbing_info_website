rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read approved events
    match /events/{document} {
      allow read: if resource.data.status == 'a';
      allow create: if true; // Allow anyone to submit events (they start as 'ur')
      allow update, delete: if false; // Only allow updates through admin functions
    }
    
    // Allow anyone to create contacts (newsletter subscriptions)
    match /contacts/{document} {
      allow create: if true;
      allow read, update, delete: if false; // Only allow through admin functions
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
